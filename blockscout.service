[Unit]
  Description=blockscout
  StartLimitIntervalSec=500
  StartLimitBurst=5

[Service]
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=/data/mainnet/blockscout
  ExecStartPre=
  ExecStart=bash ./start.sh 
  Type=simple
  User=centos
  KillSignal=SIGINT
  TimeoutStopSec=120

[Install]
  WantedBy=multi-user.target
